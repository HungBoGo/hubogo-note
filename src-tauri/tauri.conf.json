{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "HubogoNote",
  "version": "1.0.5",
  "identifier": "com.hubogo.note",
  "build": {
    "beforeDevCommand": "npm run dev:vite",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build:vite",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "HubogoNote",
        "width": 1000,
        "height": 700,
        "minWidth": 280,
        "minHeight": 400,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": false,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.13",
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "category": "public.app-category.productivity",
    "shortDescription": "Task management app with income tracking",
    "longDescription": "HubogoNote - Ứng dụng quản lý công việc với theo dõi thu nhập, hệ thống ưu tiên Eisenhower Matrix và phân loại công việc thông minh."
  }
}
